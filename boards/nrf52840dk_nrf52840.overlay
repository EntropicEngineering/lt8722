
&pinctrl {
    lt7822_spi_default: lt7822_spi_default {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 0)>,
                    <NRF_PSEL(SPIM_MOSI, 0, 0)>,
                    <NRF_PSEL(SPIM_MISO, 0, 0)>;
        };
    };
};

&spi1 {
    status="okay";
    pinctrl-0 = <&lt7822_spi_default>;
    cs-gpios = <&gpio1 7 GPIO_ACTIVE_LOW>;

    lt7822: lt7822@0 {
        compatible = "zephyr,spi-device";
        reg = <0>;
        spi-max-frequency = <1000000>;
    };
};
